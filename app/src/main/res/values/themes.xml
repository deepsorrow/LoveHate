<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.LoveHate.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/light_violet_500</item>
        <item name="colorPrimaryVariant">@color/light_violet_500</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/light_violet_400</item>
        <item name="colorSecondaryVariant">@color/light_violet_400</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="background_color">@color/light_white_970</item>
        <item name="surface_color">@android:color/white</item>
        <item name="text_color">@color/light_black_170</item>
        <item name="unaccented_text_color">@color/light_black_330</item>
        <item name="unaccented_light_text_color">@color/light_gray_860</item>
        <item name="favorite_icon_color">@color/light_yellow_910</item>

        <item name="union_color">?colorPrimary</item>
        <item name="love_color">@color/light_green_440</item>
        <item name="neutral_color">@color/light_gray_560</item>
        <item name="hate_color">@color/light_red_700</item>

        <item name="union_background_color">@color/light_violet_960</item>
        <item name="love_background_color">@color/light_green_950</item>
        <item name="neutral_background_color">@color/light_gray_940</item>
        <item name="hate_background_color">@color/light_red_900</item>

        <item name="chip_background_color">@color/light_white_960</item>
        <item name="chip_selected_background_color">@color/light_gray_900</item>

        <item name="placeholder_color">@color/light_gray_760</item>
        <item name="border_color">@color/light_blue_910</item>

        <item name="snackbarStyle">@style/ErrorSnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/ErrorSnackbarTextViewStyle</item>
        <item name="transparent_color">@android:color/transparent</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/light_white_970</item>
        <item name="android:windowBackground">@color/light_white_970</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">?text_color</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="Theme.LoveHate.Dark" parent="Theme.LoveHate.Light">
        <item name="colorPrimary">@color/dark_violet_100</item>
        <item name="colorPrimaryVariant">@color/dark_violet_100</item>
        <item name="colorOnPrimary">@color/dark_grey_820</item>
        <item name="colorSecondary">@color/light_violet_400</item>
        <item name="colorSecondaryVariant">@color/light_violet_400</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="background_color">@color/dark_black_150</item>
        <item name="surface_color">@color/dark_blue_240</item>
        <item name="text_color">@color/dark_grey_600</item>
        <item name="unaccented_text_color">@color/dark_grey_660</item>
        <item name="favorite_icon_color">@color/dark_yellow_790</item>

        <item name="union_background_color">@color/dark_black_120</item>
        <item name="love_background_color">@color/dark_green_170</item>
        <item name="neutral_background_color">?background_color</item>
        <item name="hate_background_color">@color/dark_red_150</item>

        <item name="love_color">@color/dark_green_570</item>
        <item name="neutral_color">@color/dark_grey_350</item>
        <item name="hate_color">@color/dark_red_700</item>

        <item name="border_color">@color/light_gray_760</item>

        <item name="android:navigationBarColor">?background_color</item>
        <item name="chip_background_color">@color/dark_grey_220</item>
        <item name="chip_selected_background_color">@color/dark_blue_510</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="TopicImagePreviewStyle" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/default_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/default_corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="SplashTheme" parent="Theme.LoveHate.Light">
        <item name="android:windowBackground">?colorPrimary</item>
    </style>
</resources>