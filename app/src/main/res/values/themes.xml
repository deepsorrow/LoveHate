<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.LoveHate.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary</item>
        <item name="colorOnPrimary">@color/light_onPrimary</item>
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorSecondaryVariant">@color/light_secondary</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="background_color">@color/light_background</item>
        <item name="surface_color">@color/light_surface</item>
        <item name="text_color">@color/light_onSurface</item>
        <item name="unaccented_text_color">@color/light_onSurfaceVariant1</item>
        <item name="unaccented_light_text_color">@color/light_onSurfaceVariant2</item>
        <item name="favorite_icon_color">@color/light_onSurfaceVariant3</item>

        <item name="union_color">?colorPrimary</item>
        <item name="love_color">@color/light_love</item>
        <item name="neutral_color">@color/light_neutral</item>
        <item name="hate_color">@color/light_hate</item>

        <item name="union_background_color">@color/light_union_container</item>
        <item name="love_background_color">@color/light_love_container</item>
        <item name="neutral_background_color">@color/light_neutral_container</item>
        <item name="hate_background_color">@color/light_hate_container</item>

        <item name="reaction_background_color">@color/light_surfaceVariant1</item>
        <item name="reaction_selected_background_color">@color/light_surfaceVariant2</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/light_background</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">?text_color</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="SplashTheme" parent="Theme.LoveHate.Light">
        <item name="android:windowBackground">?colorPrimary</item>
    </style>
</resources>