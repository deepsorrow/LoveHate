<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IconText">
        <item name="android:fontFamily">@font/icons</item>
        <item name="android:textSize">@dimen/icon_text_size</item>
    </style>

    <style name="RoundedBottomImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/default_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/default_corner_radius</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThumbnailImageStyle">
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
        <item name="android:padding">1.5dp</item>
        <item name="strokeColor">?border_color</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="BottomSheetDialogThemeNoFloating" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorBackgroundFloating">@android:color/transparent</item>
    </style>

    <style name="ErrorSnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?hate_container_color</item>
    </style>

    <style name="ErrorSnackbarTextViewStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="ImagesCarouselCardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CarouselShapeAppearanceOverlay</item>
    </style>


    <style name="CarouselShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/default_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/default_corner_radius</item>
    </style>
</resources>