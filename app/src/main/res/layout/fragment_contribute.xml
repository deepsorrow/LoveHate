<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.kropotov.lovehate.ui.screens.contribute.ContributeViewModel" />

        <variable
            name="router"
            type="com.kropotov.lovehate.ui.screens.contribute.ContributeRouter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:toolbarContract="@{viewModel.toolbar}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?background_color"
            android:padding="@dimen/standard_offset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

            <FrameLayout
                android:id="@+id/upload_media"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/round_top_primary_stroked"
                android:foreground="?selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:onClick="@{router::pickMedia}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/IconText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_gallery"
                        android:textColor="?unaccented_text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pick_media_hint"
                        android:textAlignment="center"
                        android:textColor="?unaccented_text_color" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.03"
                    android:contentDescription="@string/pick_media_hint"
                    android:scaleType="fitXY"
                    android:src="@drawable/chessboard_texture" />
            </FrameLayout>

            <ImageView
                android:id="@+id/carousel_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_offset"
                android:contentDescription="@string/carousel_indicator_hint"
                android:src="@drawable/carousel_indicator"
                app:layout_constraintEnd_toEndOf="@id/upload_media"
                app:layout_constraintStart_toStartOf="@id/upload_media"
                app:layout_constraintTop_toBottomOf="@id/upload_media" />

            <com.kropotov.lovehate.ui.views.LoveHateTextField
                android:id="@+id/text_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_offset"
                android:orientation="vertical"
                app:hint="@string/contribute_topic_name_hint"
                app:inputText="@={viewModel.title}"
                app:layout_constraintStart_toStartOf="@id/carousel_indicator"
                app:layout_constraintTop_toBottomOf="@id/carousel_indicator"
                app:maxLength="@integer/title_max_length"
                app:maxLines="1"
                app:opinionStateListener="@{viewModel}" />

            <EditText
                android:id="@+id/comment_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/big_offset"
                android:background="@drawable/round_top_primary_stroked"
                android:hint="@string/contribute_your_comment_hint"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:maxHeight="@dimen/max_comment_height"
                android:maxLength="@integer/opinion_max_length"
                android:minHeight="@dimen/text_field_height"
                android:paddingStart="@dimen/big_offset"
                android:text="@={viewModel.opinion}"
                android:textColorHint="?unaccented_text_color"
                android:textCursorDrawable="@null"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="@+id/text_field"
                app:layout_constraintStart_toStartOf="@+id/text_field"
                app:layout_constraintTop_toBottomOf="@+id/text_field"
                app:layout_constraintVertical_bias="0"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/comment_text_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/tiny_offset"
                android:textColor="?unaccented_text_color"
                android:textSize="@dimen/character_countdown_text_size"
                app:layout_constraintBottom_toBottomOf="@id/comment_edit_text"
                app:layout_constraintEnd_toEndOf="@+id/comment_edit_text"
                app:layout_constraintStart_toStartOf="@id/comment_edit_text"
                tools:text="1000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_offset"
                android:text="Просьба не писать в одном сообщении на несколько тем сразу.\nЕсли Вы любите Секс, Пиво и Жириновского, то, пожалуйста, не поленитесь сделать три отдельных письма."
                android:textColor="?unaccented_text_color"
                app:layout_constraintEnd_toEndOf="@id/comment_edit_text"
                app:layout_constraintStart_toStartOf="@id/comment_edit_text"
                app:layout_constraintTop_toBottomOf="@id/comment_edit_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_field_height"
                android:text="@string/contribute_publish_button_text"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/default_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/comment_edit_text"
                app:layout_constraintStart_toStartOf="@+id/comment_edit_text"
                app:onClick="@{viewModel::onPublishClicked}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/overlay_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
