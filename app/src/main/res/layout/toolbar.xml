<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="toolbarContract"
            type="com.kropotov.lovehate.ui.base.ToolbarContract" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:paddingStart="@dimen/standard_offset"
        android:paddingTop="@dimen/standard_offset"
        android:paddingEnd="@dimen/standard_offset"
        app:backgroundColorByAttr="@{toolbarContract.toolbarColor}"
        app:isVisible="@{toolbarContract.toolbarVisibility}">

        <TextView
            android:id="@+id/arrow_back"
            style="@style/IconText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/enormous_offset"
            android:text="@string/icon_arrow_back"
            android:textColor="?colorOnPrimary"
            android:visibility="gone"
            app:isVisible="@{toolbarContract.arrowBackIsVisible}"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"
            tools:ignore="RtlSymmetry"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:includeFontPadding="false"
            android:text="@string/app_name"
            android:textColor="?colorOnPrimary"
            android:textSize="@dimen/toolbar_title_size"
            app:layout_constraintEnd_toStartOf="@id/title_icon"
            app:layout_constraintStart_toEndOf="@id/arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:textRes="@{toolbarContract.title}" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="?unaccented_light_text_color"
            app:layout_constraintEnd_toStartOf="@id/title_icon"
            app:layout_constraintStart_toEndOf="@+id/arrow_back"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:textRes="@{toolbarContract.subtitle}"
            app:isVisible="@{toolbarContract.subtitleIsVisible}"
            tools:text="New messages" />

        <TextView
            android:id="@+id/title_icon"
            style="@style/IconText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_search"
            android:textColor="?colorOnPrimary"
            app:isVisible="@{toolbarContract.searchIconIsVisible}"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_offset"
            app:isVisible="@{toolbarContract.isBottomOffsetVisible}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>